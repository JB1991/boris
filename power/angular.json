{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "power": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "prefix": "power",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "i18n": {
                "sourceLocale": {
                    "code": "de",
                    "baseHref": ""
                },
                "locales": {
                    "de-simple": "src/locales/messages.de-simple.xlf",
                    "en": "src/locales/messages.en.xlf"
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "localize": true,
                        "outputPath": "dist/power/browser",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.app.json",
                        "assets": [
                            "src/favicon.ico",
                            "src/assets",
                            "src/robots.txt",
                            "src/sitemap.xml",
                            "src/manifest.webmanifest"
                        ],
                        "styles": [
                            "src/styles.scss"
                        ],
                        "scripts": [],
                        "allowedCommonJsDependencies": [
                            "echarts",
                            "hyphen",
                            "showdown"
                        ],
                        "vendorChunk": true,
                        "extractLicenses": false,
                        "buildOptimizer": false,
                        "sourceMap": true,
                        "optimization": false,
                        "namedChunks": true
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "6kb"
                                },
                                {
                                    "type": "bundle",
                                    "name": "main",
                                    "maximumWarning": "768kb",
                                    "maximumError": "1024kb"
                                }
                            ],
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "namedChunks": false,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "serviceWorker": true,
                            "ngswConfigPath": "ngsw-config.json"
                        },
                        "staging": {
                            "budgets": [
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "6kb"
                                },
                                {
                                    "type": "bundle",
                                    "name": "main",
                                    "maximumWarning": "768kb",
                                    "maximumError": "1024kb"
                                }
                            ],
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.staging.ts"
                                }
                            ],
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "namedChunks": false,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "serviceWorker": true,
                            "ngswConfigPath": "ngsw-config.json"
                        },
                        "de": {
                            "localize": [
                                "de"
                            ],
                            "baseHref": "/"
                        },
                        "de-simple": {
                            "localize": [
                                "de-simple"
                            ],
                            "baseHref": "/"
                        },
                        "en": {
                            "localize": [
                                "en"
                            ],
                            "baseHref": "/"
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "power:build:de",
                        "proxyConfig": "proxy.conf.json",
                        "host": "0.0.0.0",
                        "disableHostCheck": true
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "power:build:production,de"
                        },
                        "staging": {
                            "browserTarget": "power:build:staging,de"
                        },
                        "de": {
                            "browserTarget": "power:build:de"
                        },
                        "de-simple": {
                            "browserTarget": "power:build:de-simple"
                        },
                        "en": {
                            "browserTarget": "power:build:en"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "power:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.spec.json",
                        "sourceMap": true,
                        "karmaConfig": "src/karma.conf.js",
                        "styles": [
                            "src/styles.scss"
                        ],
                        "scripts": [],
                        "assets": [
                            "src/favicon.ico",
                            "src/assets",
                            "src/manifest.webmanifest"
                        ]
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": [
                            "src/**/*.ts",
                            "src/**/*.html"
                        ]
                    }
                },
                "server": {
                    "builder": "@angular-devkit/build-angular:server",
                    "options": {
                        "localize": false,
                        "outputPath": "dist/power/server",
                        "main": "server.ts",
                        "tsConfig": "src/tsconfig.server.json",
                        "sourceMap": true,
                        "optimization": false
                    },
                    "configurations": {
                        "production": {
                            "outputHashing": "media",
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "sourceMap": false,
                            "optimization": true,
                            "localize": true
                        },
                        "staging": {
                            "outputHashing": "media",
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.staging.ts"
                                }
                            ],
                            "sourceMap": false,
                            "optimization": true,
                            "localize": true
                        },
                        "de": {
                            "localize": [
                                "de"
                            ]
                        },
                        "de-simple": {
                            "localize": [
                                "de-simple"
                            ]
                        },
                        "en": {
                            "localize": [
                                "en"
                            ]
                        }
                    }
                },
                "serve-ssr": {
                    "builder": "@nguniversal/builders:ssr-dev-server",
                    "options": {
                        "browserTarget": "power:build:de",
                        "serverTarget": "power:server"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "power:build:production,de",
                            "serverTarget": "power:server:production"
                        },
                        "staging": {
                            "browserTarget": "power:build:staging,de",
                            "serverTarget": "power:server:staging"
                        }
                    }
                },
                "prerender": {
                    "builder": "@nguniversal/builders:prerender",
                    "options": {
                        "browserTarget": "power:build:production",
                        "serverTarget": "power:server:production",
                        "routes": [
                            "/",
                            "/login",
                            "/logout",
                            "/feedback",
                            "/ogc-dienste",
                            "/notfound",
                            "/bodenrichtwerte",
                            "/grundstuecksmarktberichte",
                            "/landesgrundstuecksmarktberichte",
                            "/immobilienpreisindex",
                            "/forms",
                            "/forms/public-dashboard"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "power:build:production",
                            "serverTarget": "power:server:production"
                        },
                        "staging": {
                            "browserTarget": "power:build:staging",
                            "serverTarget": "power:server:staging"
                        },
                        "de": {
                            "browserTarget": "power:build:production,de",
                            "serverTarget": "power:server:production,de"
                        },
                        "de-simple": {
                            "browserTarget": "power:build:production,de-simple",
                            "serverTarget": "power:server:production,de-simple"
                        },
                        "en": {
                            "browserTarget": "power:build:production,en",
                            "serverTarget": "power:server:production,en"
                        }
                    }
                }
            }
        },
        "power-e2e": {
            "root": "e2e/",
            "projectType": "application",
            "architect": {
                "e2e": {
                    "builder": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "e2e/protractor.conf.js",
                        "devServerTarget": "power:serve"
                    },
                    "configurations": {
                        "production": {
                            "devServerTarget": "power:serve:production"
                        },
                        "staging": {
                            "devServerTarget": "power:serve:staging"
                        }
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": "e2e/tsconfig.e2e.json",
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "power"
}